<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.Wallcandy.AppWidget.Container.LessPadding"
    android:theme="@style/AppTheme.AppWidgetContainer">

    <AnalogClock
        android:id="@+id/simpleAnalogClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dial="@drawable/clock_analog_numeral_dial"
        android:hand_hour="@drawable/clock_analog_day_hour"
        android:hand_minute="@drawable/clock_analog_simple_minute"/>

</RelativeLayout>