<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/weatherBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_calendar1_small_bg"
        android:clipToOutline="true"

        android:background="@drawable/shape_app_widget_ffffff_r25_bg"/>

    <TextClock
        android:id="@+id/month"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_weight="26.0"
        android:autoSizeMaxTextSize="@dimen/sp_18"
        android:autoSizeMinTextSize="@dimen/sp_6"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:format12Hour="MMM"
        android:format24Hour="MMM"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="Nov"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <TextClock
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/month"
        android:layout_weight="80.0"
        android:autoSizeMaxTextSize="@dimen/sp_72"
        android:autoSizeMinTextSize="@dimen/sp_40"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:format12Hour="d"
        android:format24Hour="d"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="25"
        android:layout_marginTop="-8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_72"
        android:textStyle="bold" />


</RelativeLayout>
