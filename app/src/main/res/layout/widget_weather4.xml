<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/weatherBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bg_minimalist_sunny_small"
        android:clipToOutline="true"
        android:background="@drawable/shape_app_widget_ffffff_r25_bg"/>

    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:text="35"
        android:textColor="@color/black"
        android:textSize="44sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London"
        android:typeface="sans"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-8dp"
        android:layout_below="@id/temp"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/city"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp">


        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/city"
            android:tint="@color/black"
            android:src="@drawable/ic_minimalist_sunny" />


        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:text="Sunny"
            android:layout_marginLeft="4dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:typeface="sans" />


    </LinearLayout>


    <TextView
        android:id="@+id/minmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:text="H: 38 L:23"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:typeface="sans" />


</RelativeLayout>
